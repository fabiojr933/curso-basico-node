<%- include('includes/head'); %> <%- include('includes/nav'); %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-5">
      <h1 class="display-1 text-center">Login</h1>
      <p class="text-center lead">Faça seu login ou crie sua conta abaixo</p>

      <%- include('includes/messeges');  %>

      <div class="row">
        <div class="col">
          <h4>Faço seu cadastro</h4>
          <form action="/login/register" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="mb-3">
              <label class="form-label">Email</label>
              <input type="email" class="form-control" name="login" />
            </div>
            <div class="mb-3">
              <label class="form-label">Password</label>
              <input type="password" class="form-control" name="senha" />
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
          </form>
        </div>

        <div class="col">
          <h4>entrar no sistema</h4>
          <form action="/login/entrar" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="mb-3">
              <label class="form-label">Email</label>
              <input type="email" class="form-control" name="login" />
            </div>
            <div class="mb-3">
              <label class="form-label">Password</label>
              <input type="password" class="form-control" name="senha" />
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer'); %>
